doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Click Power - Complete Industrial Solutions
  style.
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap');
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }
    body {
    font-family: 'Inter', sans-serif;
    background: #ffffff;
    color: #1e293b;
    overflow-x: hidden;
    }
    /* Spline 3D Background */
    .spline-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
    pointer-events: none;
    opacity: 0.9;
    }
    .spline-background iframe,
    .spline-background spline-viewer {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
    object-fit: cover;
    }
    /* Hide Spline on mobile for better performance */
    @media (max-width: 768px) {
    .spline-background {
    opacity: 0.5;
    }
    }
    @media (max-width: 480px) {
    .spline-background {
    opacity: 0.3;
    }
    }
    /* Animated Background Overlay */
    .bg-animation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.35) 0%,
    rgba(255, 255, 255, 0.65) 50%,
    rgba(255, 255, 255, 0.8) 100%
    );
    pointer-events: none;
    }
    .bg-animation::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.03) 2px, transparent 2px);
    background-size: 50px 50px;
    animation: moveGrid 20s linear infinite;
    }
    @keyframes moveGrid {
    0% {
    transform: translate(0, 0);
    }
    100% {
    transform: translate(50px, 50px);
    }
    }
    
    /* === Navbar === */
    .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(37, 99, 235, 0.15);
    padding: 1.2rem 5%;
    z-index: 1000;
    transition: all 0.3s ease;
    }
    .navbar.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    }
    .logo {
    font-size: 2rem;
    font-weight: 900;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: flex;
    align-items: center;
    gap: 0.8rem;
    cursor: pointer;
    transition: transform 0.3s ease;
    text-decoration: none;
    }
    .logo-icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 12px;
    background-color: #fff;
    padding: 0px;
    filter: drop-shadow(0 0 8px rgba(37, 99, 235, 0.4));
    transition: transform 0.3s ease;
    }
    .nav-links {
    display: flex;
    list-style: none;
    gap: 3rem;
    align-items: center;
    margin: 0;
    padding: 0;
    }
    .nav-links a {
    text-decoration: none;
    color: #1e293b;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    font-size: 1.1rem;
    }
    .nav-links a::before {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    transition: all 0.3s ease;
    transform: translateX(-50%);
    }
    .nav-links a:hover {
    color: #2563eb;
    transform: translateY(-2px);
    }
    .nav-links a:hover::before {
    width: 100%;
    }
    .nav-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
    }
    .btn-login,
    .btn-signup {
    padding: 0.6rem 1.6rem;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s;
    border: 2px solid #2563eb;
    cursor: pointer;
    white-space: nowrap;
    }
    .btn-login {
    background: transparent;
    color: #2563eb;
    }
    .btn-signup {
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    color: #fff;
    border: 2px solid #2563eb;
    }
    .btn-login:hover,
    .btn-signup:hover {
    color: #fff;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    border-color: #2563eb;
    transform: translateY(-2px) scale(1.06);
    }
    
    /* User Dropdown Styles */
    .nav--user {
    position: relative;
    }
    .user-dropdown {
    position: relative;
    }
    .user-dropdown__toggle {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    background: rgba(37, 99, 235, 0.1);
    border: 2px solid rgba(37, 99, 235, 0.3);
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    color: #1e293b;
    }
    .user-dropdown__toggle:hover {
    background: rgba(37, 99, 235, 0.15);
    border-color: #2563eb;
    transform: translateY(-2px);
    }
    .nav__user-img {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #2563eb;
    }
    .user-name {
    font-size: 1rem;
    color: #1e293b;
    }
    .dropdown-icon {
    transition: transform 0.3s ease;
    color: #2563eb;
    }
    .user-dropdown.active .dropdown-icon {
    transform: rotate(180deg);
    }
    .user-dropdown__menu {
    position: absolute;
    top: calc(100% + 10px);
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(37, 99, 235, 0.2);
    border-radius: 12px;
    min-width: 220px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1001;
    }
    .user-dropdown.active .user-dropdown__menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    }
    .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 1.5rem;
    color: #1e293b;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    background: transparent;
    width: 100%;
    text-align: left;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    }
    .dropdown-item:hover {
    background: rgba(37, 99, 235, 0.08);
    color: #2563eb;
    }
    .dropdown-item svg {
    color: #2563eb;
    flex-shrink: 0;
    }
    .dropdown-divider {
    height: 1px;
    background: rgba(37, 99, 235, 0.15);
    margin: 0.5rem 0;
    border: none;
    }
    .dropdown-item--logout {
    color: #dc2626;
    }
    .dropdown-item--logout:hover {
    background: rgba(220, 38, 38, 0.08);
    color: #dc2626;
    }
    .dropdown-item--logout svg {
    color: #dc2626;
    }
    
    /* Mobile Menu Toggle */
    .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
    }
    .menu-toggle span {
    width: 30px;
    height: 3px;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    border-radius: 6px;
    transition: all 0.3s ease;
    }
    .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
    }
    .menu-toggle.active span:nth-child(2) {
    opacity: 0;
    }
    .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
    }
       
    /* === Hero Section === */
    .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 8rem 5% 4rem;
    position: relative;
    }
    .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 5rem;
    align-items: center;
    width: 100%;
    }
    .hero-content {
    animation: fadeInUp 1s ease;
    position: relative;
    z-index: 2;
    }
    @keyframes fadeInUp {
    from {
    opacity: 0;
    transform: translateY(30px);
    }
    to {
    opacity: 1;
    transform: translateY(0);
    }
    }
    .hero-badge {
    display: inline-block;
    background: rgba(37, 99, 235, 0.1);
    border: 1px solid rgba(37, 99, 235, 0.3);
    padding: 0.5rem 1.5rem;
    border-radius: 20px;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: #2563eb;
    backdrop-filter: blur(10px);
    }
    .hero-content h1 {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #1e293b 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .hero-content h1 span {
    display: block;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .hero-content p {
    font-size: 1.3rem;
    color: #475569;
    margin-bottom: 3rem;
    line-height: 1.8;
    }
    .hero-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    }
    .btn {
    padding: 0.8rem 2rem;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-weight: 700;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    }
    .btn-primary {
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    color: white;
    padding: 1.2rem 3rem;
    font-size: 1.2rem;
    box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
    }
    .btn-primary:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
    }
    .btn-secondary {
    background: transparent;
    color: #2563eb;
    padding: 1.2rem 3rem;
    font-size: 1.2rem;
    border: 2px solid #2563eb;
    }
    .btn-secondary:hover {
    background: rgba(37, 99, 235, 0.1);
    border-color: #2563eb;
    transform: translateY(-5px);
    }
    .hero-image {
    position: relative;
    animation: fadeInRight 1s ease 0.3s both;
    z-index: 2;
    }
    @keyframes fadeInRight {
    from {
    opacity: 0;
    transform: translateX(50px);
    }
    to {
    opacity: 1;
    transform: translateX(0);
    }
    }
    .image-wrapper {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    }
    .image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.2) 0%, rgba(14, 165, 233, 0.2) 100%);
    z-index: 1;
    }
    .hero-image img {
    width: 100%;
    display: block;
    transition: transform 0.5s ease;
    }
    .image-wrapper:hover img {
    transform: scale(1.05);
    }
    .floating-card {
    position: absolute;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(37, 99, 235, 0.2);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    animation: float 3s ease-in-out infinite;
    }
    @keyframes float {
    0%,
    100% {
    transform: translateY(0px);
    }
    50% {
    transform: translateY(-20px);
    }
    }
    .floating-card.card1 {
    top: 10%;
    right: -10%;
    animation-delay: 0s;
    }
    .floating-card.card2 {
    bottom: 10%;
    left: -10%;
    animation-delay: 1s;
    }
    .floating-card h4 {
    color: #2563eb;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    }
    .floating-card p {
    color: #1e293b;
    font-size: 2rem;
    font-weight: bold;
    }
    /* === Enhanced Features Section === */
    .features {
    padding: 6rem 5%;
    position: relative;
    z-index: 2;
    background: #f8fafc;
    }
    .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 5rem;
    }
    .section-badge {
    display: inline-block;
    background: rgba(37, 99, 235, 0.1);
    border: 1px solid rgba(37, 99, 235, 0.3);
    padding: 0.5rem 1.5rem;
    border-radius: 20px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: #2563eb;
    backdrop-filter: blur(10px);
    animation: pulse 2s ease-in-out infinite;
    }
    @keyframes pulse {
    0%, 100% {
    transform: scale(1);
    }
    50% {
    transform: scale(1.05);
    }
    }
    .section-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #1e293b 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .section-subtitle {
    color: #475569;
    font-size: 1.2rem;
    line-height: 1.6;
    }
    .features-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
    }
    .feature-card {
    background: #ffffff;
    border: 2px solid rgba(37, 99, 235, 0.1);
    padding: 3rem;
    border-radius: 20px;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    }
    /* Gradient border effect on hover */
    .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.08) 0%, rgba(14, 165, 233, 0.08) 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 0;
    }
    /* Animated corner accent */
    .feature-card::after {
    content: '';
    position: absolute;
    top: -2px;
    right: -2px;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 60px 60px 0;
    border-color: transparent #2563eb transparent transparent;
    opacity: 0;
    transition: all 0.5s ease;
    }
    .feature-card:hover::before {
    opacity: 1;
    }
    .feature-card:hover::after {
    opacity: 0.15;
    border-width: 0 80px 80px 0;
    }
    .feature-card:hover {
    transform: translateY(-15px) scale(1.02);
    border-color: rgba(37, 99, 235, 0.3);
    box-shadow: 0 20px 60px rgba(37, 99, 235, 0.2);
    }
    .feature-icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
    }
    /* Circular background for icon */
    .feature-icon-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90px;
    height: 90px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(14, 165, 233, 0.1) 100%);
    border-radius: 50%;
    transition: all 0.5s ease;
    z-index: -1;
    }
    .feature-card:hover .feature-icon-wrapper::before {
    width: 110px;
    height: 110px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.2) 0%, rgba(14, 165, 233, 0.2) 100%);
    }
    .feature-icon {
    font-size: 4rem;
    display: inline-block;
    filter: drop-shadow(0 4px 12px rgba(37, 99, 235, 0.3));
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
    }
    .feature-card:hover .feature-icon {
    transform: scale(1.3) rotate(10deg);
    filter: drop-shadow(0 8px 20px rgba(37, 99, 235, 0.5));
    }
    .feature-content {
    position: relative;
    z-index: 1;
    }
    .feature-card h3 {
    font-size: 1.7rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: #1e293b;
    transition: color 0.3s ease;
    }
    .feature-card:hover h3 {
    color: #2563eb;
    }
    .feature-card p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #475569;
    transition: color 0.3s ease;
    }
    .feature-card:hover p {
    color: #1e293b;
    }
    /* Progress bar animation */
    .feature-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, #2563eb 0%, #0ea5e9 100%);
    transition: width 0.5s ease;
    }
    .feature-card:hover .feature-progress {
    width: 100%;
    }
    /* Badge on feature cards */
    .feature-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    color: white;
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.5s ease;
    z-index: 2;
    }
    .feature-card:hover .feature-badge {
    opacity: 1;
    transform: translateY(0);
    }
    /* Staggered animation on scroll */
    .feature-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUpStagger 0.8s ease forwards;
    }
    .feature-card:nth-child(1) { animation-delay: 0.1s; }
    .feature-card:nth-child(2) { animation-delay: 0.2s; }
    .feature-card:nth-child(3) { animation-delay: 0.3s; }
    .feature-card:nth-child(4) { animation-delay: 0.4s; }
    .feature-card:nth-child(5) { animation-delay: 0.5s; }
    .feature-card:nth-child(6) { animation-delay: 0.6s; }
    @keyframes fadeInUpStagger {
    to {
    opacity: 1;
    transform: translateY(0);
    }
    }
    /* === Stats Section === */
    .stats {
    padding: 6rem 5%;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.08) 0%, rgba(14, 165, 233, 0.08) 100%);
    position: relative;
    z-index: 2;
    overflow: hidden;
    }
    .stats::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.3), transparent);
    }
    .stats::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.3), transparent);
    }
    .stats-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    }
    .stat-card {
    text-align: center;
    padding: 2rem;
    transition: transform 0.3s ease;
    }
    .stat-card:hover {
    transform: translateY(-10px);
    }
    .stat-number {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
    }
    .stat-label {
    font-size: 1.3rem;
    color: #1e293b;
    font-weight: 600;
    }
    /* === Footer === */
    .footer {
    background: #f8fafc;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    padding: 4rem 5% 2rem;
    position: relative;
    z-index: 2;
    }
    .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
    }
    .footer-section h3 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .footer-section p,
    .footer-section a {
    color: #475569;
    text-decoration: none;
    line-height: 2.2;
    display: block;
    transition: all 0.3s ease;
    font-size: 1rem;
    }
    .footer-section a:hover {
    color: #2563eb;
    transform: translateX(5px);
    }
    .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    color: #64748b;
    font-size: 1rem;
    }
    /* Scroll to top button */
    .scroll-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    border: none;
    border-radius: 12px;
