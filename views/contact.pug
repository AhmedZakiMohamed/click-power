    -webkit-text-fill-color: transparent;
    }
    .footer-section p,
    .footer-section a {
    color: #475569;
    text-decoration: none;
    line-height: 2.2;
    display: block;
    transition: all 0.3s ease;
    font-size: 1rem;
    }
    .footer-section a:hover {
    color: #2563eb;
    transform: translateX(5px);
    }
    .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    color: #64748b;
    font-size: 1rem;
    }
    /* === Scroll to Top Button === */
    .scroll-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
    z-index: 999;
    }
    .scroll-top.visible {
    display: flex;
    }
    .scroll-top:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
    }
    .social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 2rem;
    }
    .social-link {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2563eb;
    font-size: 1.3rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(37, 99, 235, 0.2);
    text-decoration: none;
    }
    .social-link:hover {
    transform: translateY(-10px);
    color: #fff;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
