    /* === Page Header === */
    .page-header {
    padding: 10rem 5% 4rem;
    text-align: center;
    position: relative;
    z-index: 2;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(14, 165, 233, 0.05) 100%);
    }
    .page-header h1 {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #1e293b 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: fadeInUp 0.8s ease;
    }
    .page-header p {
    font-size: 1.3rem;
    color: #475569;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
    animation: fadeInUp 0.8s ease 0.2s both;
    }
    @keyframes fadeInUp {
    from {
    opacity: 0;
    transform: translateY(30px);
    }
    to {
    opacity: 1;
    transform: translateY(0);
    }
    }
    /* === Contact Section === */
    .contact-section {
    padding: 4rem 5%;
    position: relative;
    z-index: 2;
    }
    .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    }
    .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    }
    .contact-card {
    background: #f8fafc;
    border: 1px solid rgba(37, 99, 235, 0.15);
    padding: 2.5rem;
    border-radius: 16px;
    transition: all 0.4s ease;
    }
    .contact-card:hover {
    transform: translateY(-5px);
    border-color: rgba(37, 99, 235, 0.3);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    .contact-card-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: inline-block;
    filter: drop-shadow(0 0 10px rgba(37, 99, 235, 0.3));
    }
    .contact-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1e293b;
    }
    .contact-card p {
    font-size: 1.1rem;
    color: #475569;
    line-height: 1.8;
    }
    .contact-card a {
    color: #2563eb;
    text-decoration: none;
    transition: all 0.3s ease;
    }
    .contact-card a:hover {
    color: #0ea5e9;
    }
    /* === Map Section === */
    .map-section {
    padding: 4rem 5%;
    position: relative;
    z-index: 2;
    }
    .map-container {
    max-width: 1400px;
    margin: 0 auto;
    background: #f8fafc;
