    max-width: 290px;
    }
    .picture-box__img {
    width: 100%;
    height: 200px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    object-fit: cover;
    background: #f0f0f5;
    }
    /* === Footer === */
    .footer {
    background: #f7f9fc;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    padding: 3rem 5% 1.3rem;
    margin-top: 4rem;
    font-size: 0.98rem;
    color: #475569;
    }
    .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2.1rem;
    margin-bottom: 2rem;
    }
    .footer-section h3 {
    margin-bottom: 1.1rem;
    font-size: 1.11rem;
    font-weight: 700;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .footer-section p,
    .footer-section a {
    color: #475569;
    text-decoration: none;
    line-height: 2;
    font-size: 0.98rem;
    display: block;
    margin-bottom: 0.5rem;
    }
    .footer-section a:hover {
