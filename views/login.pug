doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width,initial-scale=1.0')
  title Login | Click Power
  link(href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap' rel='stylesheet')
  style.
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }
    body {
    background: #ffffff;
    font-family: 'Inter', sans-serif;
    color: #1e293b;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    }
    body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 30%, rgba(37, 99, 235, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(14, 165, 233, 0.08) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
    }
    .main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    z-index: 1;
    }
    .login-form {
    background: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(37, 99, 235, 0.15);
    border-radius: 16px;
    padding: 2.6rem 2.3rem 2.4rem;
    min-width: 380px;
    max-width: 95vw;
    transition: all 0.3s ease;
    }
    .login-form:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: rgba(37, 99, 235, 0.25);
    }
    .logo-section {
    text-align: center;
    margin-bottom: 2rem;
    }
    .logo-icon {
    width: 70px;
    height: 70px;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 10px rgba(37, 99, 235, 0.3));
    }
    .heading-secondary {
    font-size: 1.8rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 2.2rem;
    background: linear-gradient(135deg, #1e293b 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: .5px;
    }
    .form__group {
    margin-bottom: 1.7rem;
    }
    .form__group:last-child {
    margin-bottom: 0;
    }
    .form__label {
    display: block;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.6rem;
    letter-spacing: 0.18px;
    font-size: 1.07rem;
    }
    .form__input {
    width: 100%;
    padding: 0.75rem 1.1rem;
    border-radius: 8px;
    border: 2px solid rgba(37, 99, 235, 0.2);
    background: #f8fafc;
    color: #1e293b;
    font-size: 1rem;
    font-family: inherit;
    outline: none;
    transition: all 0.3s ease;
    }
    .form__input::placeholder {
    color: #94a3b8;
    }
    .form__input:focus {
    border-color: #2563eb;
    background: #ffffff;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }
    .btn.btn--green {
    width: 100%;
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
    color: #ffffff;
    font-weight: 900;
    padding: 0.9rem 0;
    border: none;
    border-radius: 8px;
    font-size: 1.14rem;
    cursor: pointer;
    margin-top: 0.5rem;
    letter-spacing: 0.7px;
    box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
    transition: all 0.3s ease;
    }
    .btn.btn--green:hover {
    background: linear-gradient(135deg, #1d4ed8 0%, #0284c7 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
    }
    .google-or {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 2rem 0 1.2rem 0;
    }
    .google-or span {
    color: #64748b;
    font-size: 1.07em;
    padding: 0 1em;
    font-weight: 600;
    letter-spacing: 0.25px;
    }
    .google-or::before,
    .google-or::after {
    content: "";
    display: block;
    height: 1px;
    border-radius: 4px;
    background: rgba(37, 99, 235, 0.2);
    flex: 1;
    }
    .google-btn {
    width: 100%;
    border: 2px solid rgba(37, 99, 235, 0.2);
    border-radius: 8px;
    background: #ffffff;
    color: #1e293b;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.07em;
    cursor: pointer;
    padding: 0.72rem 0;
    margin-top: 1.3em;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    letter-spacing: 0.18px;
    gap: 0.7em;
    }
    .google-btn:hover {
    background: #f8fafc;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
    border-color: rgba(37, 99, 235, 0.3);
    }
    .google-btn img {
    width: 23px;
    height: 23px;
    margin-right: 4px;
    filter: none;
    }
    .back-link {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    }
    .back-link a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 0.95rem;
    }
    .back-link a:hover {
    color: #0ea5e9;
    text-decoration: underline;
    }
    .forgotpass-link {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(37, 99, 235, 0.15);
    }
    .forgotpass-link a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 0.95rem;
    }
    .forgotpass-link  a:hover {
    color: #0ea5e9;
    text-decoration: underline;
    }
    /* Responsive */
    @media (max-width: 480px) {
    .login-form {
    padding: 2rem 1.5rem;
    min-width: unset;
    border-radius: 12px;
    }
    .main {
    padding: 1.5rem;
    }
    .logo-icon {
    width: 60px;
    height: 60px;
    }
    .heading-secondary {
    font-size: 1.5rem;
    }
    .form__label {
    font-size: 1rem;
    }
    .form__input {
    padding: 0.7rem 1rem;
    font-size: 0.95rem;
    }
    .btn.btn--green {
    font-size: 1.05rem;
    padding: 0.85rem 0;
    }
    .google-btn {
    font-size: 1rem;
    padding: 0.68rem 0;
    }
    }
    @media (max-width: 360px) {
    .login-form {
    padding: 1.5rem 1.2rem;
    min-width: unset;
    }
    .logo-icon {
    width: 55px;
    height: 55px;
    }
    .heading-secondary {
    font-size: 1.4rem;
    margin-bottom: 1.8rem;
    }
    .form__input {
    padding: 0.65rem 0.9rem;
    font-size: 0.9rem;
    }
    .btn.btn--green {
    font-size: 1rem;
    }
    }
main.main
  .login-form
    h2.heading-secondary Log into your account
    form.form.form--login
      .form__group
        label.form__label(for='email') Email address
        input#email.form__input(type='email' placeholder='you@example.com' required='')
      .form__group
        label.form__label(for='password') Password
        input#password.form__input(type='password' placeholder='••••••••' required='' minlength='8')
      .form__group
        button.btn.btn--green(type='submit') Login

    .google-or
      span or

    button.google-btn(type='button' onclick="window.location.href='/api/v1/users/google';")
      img(src='/img/icons8-google.svg' alt='Google Logo')
      | Login with Google

    .forgotpass-link
      a(href='/resetLink') Forgot Password

    .back-link
      a(href='/') &larr;Back to Home

  script(src='/dist/index.js')

